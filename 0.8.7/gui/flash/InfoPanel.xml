<?xml version="1.0" encoding="utf-8"?>
<ip>

	<!-- Автор: Shtys -->

	<!-- Список возможных макросов:
	{{n}}					- переход на новую строку
	{{t}}					- фиксированный отступ (равнозначен TAB)
	{{target}}				- название танка выбранной цели
	{{target-gun}}			- названия орудия танка цели
	{{target-reload-100}}	- примерное время перезарядки орудия танка цели с округлением до сотых (с досылателем и 110% экипажем)
	{{target-reload-10}}	- примерное время перезарядки орудия танка цели с округлением до десятых (с досылателем и 110% экипажем)
	{{target-reload}}		- примерное время перезарядки орудия танка цели с округлением до целых (с досылателем и 110% экипажем)
	{{vision}}				- радиус обзора танка цели (для 100% экипажа)
	{{hull-front}}			- лобовое бронирование корпуса танка цели
	{{hull-side}}			- бортовое бронирование корпуса танка цели
	{{hull-back}}			- бронирование кормы корпуса танка цели
	{{turret-front}}		- лобовое бронирование башни танка цели
	{{turret-side}}			- бортовое бронирование башни танка цели
	{{turret-back}}			- бронирование кормы башни танка цели
	{{damage-1}}			- урон первого типа снаряда танка цели
	{{damage-2}}			- урон второго типа снаряда танка цели
	{{damage-3}}			- урон третьего типа снаряда танка цели
	{{power-1}}				- бронепробиваемость первого типа снаряда танка цели
	{{power-2}}				- бронепробиваемость второго типа снаряда танка цели
	{{power-3}}				- бронепробиваемость третьего типа снаряда танка цели
	{{type-1}}				- первый тип снаряда танка цели
	{{type-2}}				- второй тип снаряда танка цели
	{{type-3}}				- третий тип снаряда танка цели -->

	<!-- Глобальные настройки панели информации о цели -->
	<infoPanel>
		
		<!-- Аркадный прицел -->
		<arcade visible="true"> <!-- visible - видимость элемента, true/false - включено/выключено -->
			<location x="90" y="0"/> <!-- x, y - координаты расположения элемента. Отсчет координат идет от центра экрана, в аркадном прицеле перекрестие не является центром экрана -->
			<delay>10</delay> <!-- Время, через которое исчезнет панель, в секундах. 0 - отображать всегда -->
		</arcade>
		
		<!-- Снайперский прицел -->
		<sniper visible="true"> <!-- visible - видимость элемента, true/false - включено/выключено -->
			<location x="140" y="50"/> <!-- x, y - координаты расположения элемента. Отсчет координат идет от центра экрана, в аркадном прицеле перекрестие не является центром экрана -->
			<delay>10</delay> <!-- Время, через которое исчезнет панель, в секундах. 0 - отображать всегда -->
		</sniper>
		
		<!-- Артиллерийский прицел -->
		<strategic visible="true"> <!-- visible - видимость элемента, true/false - включено/выключено -->
			<location x="90" y="0"/> <!-- x, y - координаты расположения элемента. Отсчет координат идет от центра экрана, в аркадном прицеле перекрестие не является центром экрана -->
			<delay>10</delay> <!-- Время, через которое исчезнет панель, в секундах. 0 - отображать всегда -->
		</strategic>
		
		<!-- Посмертный прицел -->
		<postmortem visible="true"> <!-- visible - видимость элемента, true/false - включено/выключено -->
			<location x="90" y="0"/> <!-- x, y - координаты расположения элемента. Отсчет координат идет от центра экрана, в аркадном прицеле перекрестие не является центром экрана -->
			<delay>10</delay> <!-- Время, через которое исчезнет панель, в секундах. 0 - отображать всегда -->
		</postmortem>
		
	</infoPanel>
	
	<!-- Настройка фона панели -->
	<background alpha="5" color="0xFFFFFF"> <!-- visible - видимость элемента, true/false - включено/выключено -->
		<location x="-80" y="0"/> <!-- x, y - координаты расположения элемента. Отсчет координат идет внутри самой панели в зависимости от ее положения и по умолчанию от низа и центра иконки танка -->
		<scale x="78" y="55"/> <!-- x, y - масштаб элемента в процентах. 100 - оригинальный размер -->
	</background>
	
	<!-- Настройка названия танка цели -->
	<targetName visible="true" alpha="50"> <!-- visible - видимость элемента, true/false - включено/выключено -->
		<location x="-80" y="0"/> <!-- x, y - координаты расположения элемента. Отсчет координат идет внутри самой панели в зависимости от ее положения и по умолчанию от низа и центра иконки танка -->
		<text font="$FieldFont" size="11" color="0xFFFFFF" alpha="50" align="left" bold="false" leading="0" width="95" height="35"/> <!-- font - шрифт. size - размер шрифта. color - цвет шрифта. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). align - выравнивание текста, left/right/center - лево/право/центр. bold - жирный тест, true/false - включено/выключено. leading - межстрочный интервал. width, height - ширина и высота поля -->
		<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/> <!-- size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). strength - степень нанесения тени в процентах -->
		<format>{{target}}</format> <!-- Как будет выглядеть строка в игре. Формируется она из макросов и(или) любых символов. Список макросов перечислен в начале конфига -->
	</targetName>
	
	<!-- Настройка названия орудия танка цели -->
	
	<!-- Настройка примерного времени перезарядки орудия танка цели (с досылателем и 110% экипажем) -->
	<gunReload visible="true" alpha="50"> <!-- visible - видимость элемента, true/false - включено/выключено -->
		<location x="45" y="0"/> <!-- x, y - координаты расположения элемента. Отсчет координат идет внутри самой панели в зависимости от ее положения и по умолчанию от низа и центра иконки танка -->
		<text font="$FieldFont" size="12" color="0xFF7331" alpha="50" align="left" bold="false" leading="0" width="30" height="35"/> <!-- font - шрифт. size - размер шрифта. color - цвет шрифта. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). align - выравнивание текста, left/right/center - лево/право/центр. bold - жирный тест, true/false - включено/выключено. leading - межстрочный интервал. width, height - ширина и высота поля -->
		<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/> <!-- size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). strength - степень нанесения тени в процентах -->
		<format>{{target-reload-10}}s</format> <!-- Как будет выглядеть строка в игре. Формируется она из макросов и(или) любых символов. Список макросов перечислен в начале конфига -->
	</gunReload>
	
	<!-- Настройка радиуса обзора танка цели -->
	<visionRadius visible="true" alpha="50"> <!-- visible - видимость элемента, true/false - включено/выключено -->
		<location x="-15" y="0"/> <!-- x, y - координаты расположения элемента. Отсчет координат идет внутри самой панели в зависимости от ее положения и по умолчанию от низа и центра иконки танка -->
		<text font="$FieldFont" size="12" color="0xFFFFFF" alpha="50" align="right" bold="false" leading="0" width="60" height="35"/> <!-- font - шрифт. size - размер шрифта. color - цвет шрифта. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). align - выравнивание текста, left/right/center - лево/право/центр. bold - жирный тест, true/false - включено/выключено. leading - межстрочный интервал. width, height - ширина и высота поля -->
		<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/> <!-- size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). strength - степень нанесения тени в процентах -->
		<format>{{vision}}m</format> <!-- Как будет выглядеть строка в игре. Формируется она из макросов и(или) любых символов. Список макросов перечислен в начале конфига -->
	</visionRadius>
	
	<!-- Настройка лобового бронирования башни -->
	<turretArmorF visible="true" alpha="50"> <!-- visible - видимость элемента, true/false - включено/выключено -->
		<location x="-80" y="18"/> <!-- x, y - координаты расположения элемента. Отсчет координат идет внутри самой панели в зависимости от ее положения и по умолчанию от низа и центра иконки танка -->
		<text font="$FieldFont" size="12" color="0xFFFFFF" alpha="50" align="left" bold="false" leading="0" width="160" height="35"/> <!-- font - шрифт. size - размер шрифта. color - цвет шрифта. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). align - выравнивание текста, left/right/center - лево/право/центр. bold - жирный тест, true/false - включено/выключено. leading - межстрочный интервал. width, height - ширина и высота поля -->
		<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/> <!-- size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). strength - степень нанесения тени в процентах -->
		<format>turret{{t}}{{t}}{{turret-front}}{{t}}{{turret-side}}{{t}}{{turret-back}}</format> <!-- Как будет выглядеть строка в игре. Формируется она из макросов и(или) любых символов. Список макросов перечислен в начале конфига -->
	</turretArmorF>
	
	
	<!-- Настройка лобового бронирования корпуса -->
	<hullArmorF visible="true" alpha="50"> <!-- visible - видимость элемента, true/false - включено/выключено -->
		<location x="-80" y="36"/> <!-- x, y - координаты расположения элемента. Отсчет координат идет внутри самой панели в зависимости от ее положения и по умолчанию от низа и центра иконки танка -->
		<text font="$FieldFont" size="12" color="0xFFFFFF" alpha="50" align="left" bold="false" leading="0" width="160" height="35"/> <!-- font - шрифт. size - размер шрифта. color - цвет шрифта. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). align - выравнивание текста, left/right/center - лево/право/центр. bold - жирный тест, true/false - включено/выключено. leading - межстрочный интервал. width, height - ширина и высота поля -->
		<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/> <!-- size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). strength - степень нанесения тени в процентах -->
		<format>hull{{t}}{{t}}{{hull-front}}{{t}}{{hull-side}}{{t}}{{hull-back}}</format> <!-- Как будет выглядеть строка в игре. Формируется она из макросов и(или) любых символов. Список макросов перечислен в начале конфига -->
	</hullArmorF>
	
	<!-- Настройка типа первого снаряда -->
	<shellType1 visible="true" alpha="50"> <!-- visible - видимость элемента, true/false - включено/выключено -->
		<location x="-80" y="54"/> <!-- x, y - координаты расположения элемента. Отсчет координат идет внутри самой панели в зависимости от ее положения и по умолчанию от низа и центра иконки танка -->
		<text font="$FieldFont" size="12" color="0xFFFFFF" alpha="50" align="left" bold="false" leading="0" width="160" height="35"/> <!-- font - шрифт. size - размер шрифта. color - цвет шрифта. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). align - выравнивание текста, left/right/center - лево/право/центр. bold - жирный тест, true/false - включено/выключено. leading - межстрочный интервал. width, height - ширина и высота поля -->
		<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/> <!-- size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). strength - степень нанесения тени в процентах -->
		<format>{{t}}{{t}}{{type-1}}{{t}}{{type-2}}{{t}}{{type-3}}</format> <!-- Как будет выглядеть строка в игре. Формируется она из макросов и(или) любых символов. Список макросов перечислен в начале конфига -->
	</shellType1>
	
	<!-- Настройка урона первого типа снаряда -->
	<shellDamage1 visible="true" alpha="50"> <!-- visible - видимость элемента, true/false - включено/выключено -->
		<location x="-80" y="72"/> <!-- x, y - координаты расположения элемента. Отсчет координат идет внутри самой панели в зависимости от ее положения и по умолчанию от низа и центра иконки танка -->
		<text font="$FieldFont" size="12" color="0xFFFFFF" alpha="50" align="left" bold="false" leading="0" width="160" height="35"/> <!-- font - шрифт. size - размер шрифта. color - цвет шрифта. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). align - выравнивание текста, left/right/center - лево/право/центр. bold - жирный тест, true/false - включено/выключено. leading - межстрочный интервал. width, height - ширина и высота поля -->
		<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/> <!-- size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). strength - степень нанесения тени в процентах -->
		<format>dmg{{t}}{{t}}{{damage-1}}{{t}}{{damage-2}}{{t}}{{damage-3}}</format> <!-- Как будет выглядеть строка в игре. Формируется она из макросов и(или) любых символов. Список макросов перечислен в начале конфига -->
	</shellDamage1>
	
	<!-- Настройка бронепробиваемости первого типа снаряда -->
	<shellPower1 visible="true" alpha="50"> <!-- visible - видимость элемента, true/false - включено/выключено -->
		<location x="-80" y="90"/> <!-- x, y - координаты расположения элемента. Отсчет координат идет внутри самой панели в зависимости от ее положения и по умолчанию от низа и центра иконки танка -->
		<text font="$FieldFont" size="12" color="0xFFFFFF" alpha="50" align="left" bold="false" leading="0" width="160" height="35"/> <!-- font - шрифт. size - размер шрифта. color - цвет шрифта. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). align - выравнивание текста, left/right/center - лево/право/центр. bold - жирный тест, true/false - включено/выключено. leading - межстрочный интервал. width, height - ширина и высота поля -->
		<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/> <!-- size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). strength - степень нанесения тени в процентах -->
		<format>pen{{t}}{{t}}{{power-1}}{{t}}{{power-2}}{{t}}{{power-3}}</format> <!-- Как будет выглядеть строка в игре. Формируется она из макросов и(или) любых символов. Список макросов перечислен в начале конфига -->
	</shellPower1>
	
	<!-- Настройка иконки танка -->
	<tankIcon visible="false" alpha="100"> <!-- visible - видимость элемента, true/false - включено/выключено. alpha - прозрачность. 100 - непрозрачно, 0 - прозрачно -->
		<location x="-80" y="-100"/> <!-- x, y - координаты расположения элемента. Отсчет координат идет внутри самой панели в зависимости от ее положения и по умолчанию от низа и центра иконки танка -->
		<common large="true"/> <!-- large - размер изображения танка - цели. true - большая картинка, как в карусели ангара, false - маленькая картинка, как в ушах -->
	</tankIcon>
	
	<!-- Настройка отображения типов снарядов -->
	<shellType>
		<AP>AP</AP> <!-- Бронебойный -->
		<CR>APCR</CR> <!-- Подкалиберный -->
		<HC>HEAT</HC> <!-- Кумулятивный -->
		<HE>HE</HE> <!-- Осколочно-фугасный -->
	</shellType>

</ip>